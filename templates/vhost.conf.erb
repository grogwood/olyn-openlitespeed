docRoot $VH_ROOT/<%= @vhost_item[:document_root] %>
enableGzip 1


<% @vhost_item[:contexts].each do |context| -%>
context <%= context[:url] %> {
  allowBrowse 1
  location <%= context[:location] %>
  <% if context[:realm] -%>
  realm <%= context[:realm] %>
  <% end -%>

  accessControl {
    deny
    allow *
  }

  rewrite {
    enable <%= context[:rewrite][:enable] ? 1 : 0 %>
    inherit <%= context[:rewrite][:inherit] ? 1 : 0 %>
    base <%= context[:rewrite][:base] %>
    <% if context[:rewrite][:rewrite_data_bag_item] -%>
    rules <<<END_rules
      <% rules_item = Chef::DataBagItem.load( 'litespeed_rewrites', context[:rewrite][:rewrite_data_bag_item] ) -%>
      <% rules_item[:rules].each do |rule| -%>
        <%= rule %>
      <% end -%>
    END_rules
    <% end -%>
  }
}
<% end -%>

expires {
  enableExpires 1
}

index {
  autoIndexURI /_autoindex/default.php
  indexFiles <%= @vhost_item[:index_files] %>
  autoIndex 0
  useServer 0
}

<% @vhost_item[:error_pages].each do |error| -%>
errorPage <%= error[:code] %>{
  url <%= error[:url] %>
}
<% end -%>

errorlog $VH_ROOT/logs/error.log{
  logLevel DEBUG
  rollingSize 10M
  useServer 1
}

accessLog $VH_ROOT/logs/access.log{
  compressArchive 0
  logReferer 1
  keepDays 30
  rollingSize 10M
  logUserAgent 1
  useServer 0
}

awstats {
  updateInterval 86400
  workingDir $VH_ROOT/awstats
  updateOffset 0
  siteDomain localhost
  siteAliases 127.0.0.1 localhost
  updateMode 0
  awstatsURI /awstats/
}

rewrite {
  enable <%= @vhost_item[:rewrite][:enable] ? 1 : 0 %>
  logLevel 0
<% if @vhost_item[:rewrite][:rewrite_data_bag_item] -%>
  rules <<<END_rules
  <% rules_item = Chef::DataBagItem.load( 'litespeed_rewrites', @vhost_item[:rewrite][:rewrite_data_bag_item] ) -%>
  <% rules_item[:rules].each do |rule| -%>
    <%= rule %>
  <% end -%>
  END_rules
<% end -%>
}

hotlinkCtrl {
  suffixes gif,  jpeg,  jpg
  allowedHosts
  allowDirectAccess 1
  enableHotlinkCtrl 0
  onlySelf 1
}

accessControl {
  deny
  allow *
}

<% @vhost_item[:realms].each do |realm| -%>
realm <%= realm[:name] %> {
  userDB {
    cacheTimeout 60
    maxCacheSize 200
    location conf/vhosts/<%= @vhost_item[:name] %>/<%= realm[:name] %>
  }
}
<% end -%>

general {
  enableContextAC 0
}
