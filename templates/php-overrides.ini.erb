; Error reporting levels
; FOR PRODUCTION
error_reporting = E_ALL & ~E_DEPRECATED & ~E_STRICT
display_errors = Off

; FOR DEVELOPMENT TESTING ONLY
;error_reporting = E_ALL
;display_errors = On

; For compression
zlib.output_compression = On

; Disable PHP exposure
expose_php = Off

; Enable custom extensions
; These are already typically enabled by Litespeed when the extensions are installed
;extension=gd.so
;extension=gd2.so
;extension=pdo.so
;extension=pdo_mysql.so

; Set timezone
date.timezone = Etc/UTC

[intl]
intl.default_locale = en

; Opcache settings
; The extension is already typically enabled by Litespeed when it is installed
;zend_extension=opcache.so
opcache.enable=1
opcache.enable_cli=1
opcache.memory_consumption=256
opcache.interned_strings_buffer=16
opcache.max_accelerated_files=50000
opcache.revalidate_freq=60
opcache.fast_shutdown=1
